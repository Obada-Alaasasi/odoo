<odoo>
    <record id="property_tag_action", model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_more">form,tree</field>
    </record>

    <record id="property_tag_tree", model="ir.ui.view">
        <field name="name">property_tag_form</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree channel = "string">
                <field name="name"/>
            </tree>
        </field>
    <record>


    <record id="property_tag_form", ,model="ir.ui.view">
        <field name="name">property_tag_form</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form string="channel">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>