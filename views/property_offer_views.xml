<odoo>
    <record id = "property_offer_tree" model = "ir.ui.view">
        <field name="name">property_offer_tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type = "xml">
            <tree string = "channel">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                    <button name="accept_offer" type="object" string="accept" icon="fa-check"/>
                    <button name="refuse_offer" type="object" string="refuse" icon="fa-times"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id= "property_offer_form" model = "ir.ui.view">
        <field name="name">property_offer_form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type = "xml">
            <form string = "channel">
                <sheet>
                    <group col="2">
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>