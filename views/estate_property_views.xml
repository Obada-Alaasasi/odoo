<odoo>
    <!-- create the mechanism for creating properties on the model estate.property according to the model ir.actions.act_window -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Create the list view for the estate properties according to the view ir.ui.view -->
    <record id="estate_property_view_tree" model = "ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="channel">
                <field name="name"/>
                <field name="type"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="best_offer"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="total_area"/>
                <field name="state"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- create the form view for estate properties according to ir.ui.view -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="channel">
                <header>
                    <button name="property_sold" type="object" string="SOLD"/>
                    <button name="property_cancelled" type="object" string="CANCEL"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name"/>
                        </h1>
                    </div>
                    <group col = "1" colspan = "1">
                        <field name="tag_ids" widget="many2many_tags" nolabel = "1"/>
                    </group>
                    <group col="1">
                        <field name="name"/>
                        <field name="type"/>
                        <field name="state"/>
                        <field name="postcode"/>
                        <field name="expected_price"/>                        
                        <field name="date_availability"/>
                        <field name="selling_price"/>
                        <field name="best_offer"/>
                    </group>
                    <notebook>
                        <page string = "Description">
                            <group col="1">
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                                <field name="state"/>
                                <field name="active"/>
                            </group>
                        </page>
                        <page string = "Offers">
                            <group col = "1">
                                <field name="offer_ids"/>
                            </group>
                        </page>
                        <page string="Other info">
                            <group col="2">
                                <field name="user_id"/>
                                <field name="partner_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- create the search view for the model estate.property -->
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="search params">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="facades"/>
                <field name="living_area"/>
                <filter name="available" string="Available Properties" domain="['|', ('state','=','New'), ('state','=','Offer Received')]"/>
                <separator/>
                <group expand="1" string="group by">
                    <filter name="provider" string="Provider" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>

